                    </Border>
                    <TextBlock Margin="12,0,0,0" FontSize="14" VerticalAlignment="Center" Text="{x:Bind EaseOut, Mode=OneWay}"/>
                </StackPanel>
            </ListViewItem>

            <ListViewItem x:Name="EaseInOutItem" Height="48">
