                    </Border>
                    <TextBlock Margin="12,0,0,0" FontSize="14" VerticalAlignment="Center" Text="{x:Bind EaseInOut, Mode=OneWay}"/>
                </StackPanel>
            </ListViewItem>

        </ListView>


